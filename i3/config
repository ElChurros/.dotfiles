                ~/.dotfiles/i3/scripts/home_layout.sh"; \
                mode "default"
    bindsym l exec --no-startup-id "\
                ~/.dotfiles/i3/scripts/laptop.sh"; \
                mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

