set $screenshotMode "ScreenShot: [f]ull screen, [s]election, [w]indow"
mode $screenshotMode {
  bindsym f exec --no-startup-id i3-scrot -d
  bindsym s exec --no-startup-id i3-scrot -s
  bindsym w exec --no-startup-id i3-scrot -w

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Insert mode $screenshotMode



